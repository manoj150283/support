

<h1>FBCS Clients</h1>

<table class ="table table-striped
table-bordered table-hover">
  <thead class ="thead-dark">
    <tr>
      <th>Project</th>
      <th>Status</th>
      <th>CSM</th>
      <th>Support Engineer</th>
      <th>Equipment</th>
      <th>Warranty Start Date</th>
      <th>Staff Dashboard</th>
      <th>Live Locations</th>
      <th>Total Locations</th>
      <th>Support Coverage</th>
      <th>SLA</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fbcs.each do |fbc| %>
      <tr>
        <td><%= fbc.project %></td>
        <td><%= fbc.status %></td>
        <td><%= fbc.CSM %></td>
        <td><%= fbc.Support_Engineer %></td>
        <td><%= fbc.Equipment %></td>
        <td><%= fbc.Warranty_Start_Date %></td>
        <td><%= fbc.Staff_Dashboard %></td>
        <td><%= fbc.Live_Locations %></td>
        <td><%= fbc.Total_Locations %></td>
        <td><%= fbc.Support_Coverage %></td>
        <td><%= fbc.SLA %></td>
        <td><%= link_to 'Show', fbc %></td>
        <td><%= link_to 'Edit', edit_fbc_path(fbc) %></td>
        <td><%= link_to 'Destroy', fbc, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Client', new_fbc_path, class:"btn
btn-secondary"%>
